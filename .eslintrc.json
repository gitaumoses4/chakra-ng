{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:angular",
                "onlyDependOnLibsWithTags": ["scope:components", "scope:core", "scope:utils"]
              },
              {
                "sourceTag": "scope:components",
                "onlyDependOnLibsWithTags": ["scope:core", "scope:utils"]
              },
              {
                "sourceTag": "scope:core",
                "onlyDependOnLibsWithTags": ["scope:utils"]
              },
              {
                "sourceTag": "scope:utils",
                "onlyDependOnLibsWithTags": []
              },
              {
                "sourceTag": "scope:app",
                "onlyDependOnLibsWithTags": ["scope:angular"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nx/javascript"],
      "rules": {}
    },
    {
      "files": ["*.spec.ts", "*.spec.tsx", "*.spec.js", "*.spec.jsx"],
      "env": {
        "jest": true
      },
      "rules": {}
    }
  ]
}
