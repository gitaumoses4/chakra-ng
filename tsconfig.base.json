{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@quillar/angular": ["libs/core/angular/src/index.ts"],
      "@quillar/color-mode": ["libs/core/color-mode/src/index.ts"],
      "@quillar/config": ["libs/core/config/src/index.ts"],
      "@quillar/styles": ["libs/core/styles/src/index.ts"],
      "@quillar/system": ["libs/core/system/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
